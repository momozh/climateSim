<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.climateSim">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity
            android:name="com.example.climateSim.MainActivity"
            android:screenOrientation="userLandscape">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.climateSim.A_Factory" />
        <activity android:name="com.example.climateSim.A_Government" />
        <activity android:name="com.example.climateSim.A_Market"/>
    </application>

</manifest>