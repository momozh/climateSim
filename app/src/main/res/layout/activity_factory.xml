<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    tools:context="com.example.climateSim.A_Factory"
    android:background="@drawable/factory_bg">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:layout_alignBottom="@+id/i_maxUnit">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/linearLayout5"
        android:layout_alignTop="@+id/linearLayout8"
        android:layout_toEndOf="@+id/f_TotalMoney">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current: 5"
            android:textColor="@color/whiteColor"
            android:textSize="18dp"
            android:id="@+id/i_curUnit"
            android:layout_above="@+id/i_unitBar"
            android:layout_marginLeft="3dp"
            android:layout_alignStart="@+id/i_unitBar" />

        <SeekBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/i_unitBar"
            android:max = "100"
            android:progress="5"
            android:onClick="onBack"
            android:indeterminate="false"
            android:layout_alignTop="@+id/i_toMenu"
            android:layout_alignParentStart="true"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost:"
            android:textColor="@color/whiteColor"
            android:textSize="18dp"
            android:id="@+id/i_f_cost"
            android:layout_marginLeft="3dp"
             />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MaxUnit"
        android:textColor="@color/whiteColor"
        android:textSize="18dp"
        android:id="@+id/i_maxUnit"
        android:layout_alignTop="@+id/linearLayout5"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/linearLayout5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/button_factory"
            android:id="@+id/i_button"
            android:onClick="onFactory"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="230dp"

            android:alpha="0" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/button_Market"
            android:id="@+id/i_market"
            android:onClick="onMarket"
            android:layout_alignParentBottom="true"

            android:layout_marginLeft="70dp"
            android:alpha="0" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:text="@string/button_government"
            android:id="@+id/i_government"
            android:layout_alignTop="@+id/i_button"

            android:layout_marginLeft="70dp"
            android:alpha="0"
            android:onClick="onBack" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/button_NextTurn"
            android:id="@+id/i_nextTurn"
            android:onClick="onNextTurn"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="70dp"
            android:alpha="0" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/textView9"
        android:textSize="55sp"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"
        android:onClick="Quiz"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="360dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inTurn"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/f_turn"
        android:textColor="@color/whiteColor"
        android:layout_marginStart="450dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TotalMoney"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/f_TotalMoney"
        android:textColor="@color/whiteColor"
        android:layout_marginLeft="250dp"

        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Temperature"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/whiteColor"
        android:id="@+id/f_Temperature"

        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="120dp"
        android:id="@+id/linearLayout8">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:weightSum="1"
            android:layout_below="@+id/title"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Lv. UP"
                android:id="@+id/i_buLvUp"
                android:onClick="onLevelUp1"
                android:alpha="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UP1"
                android:textStyle="bold"
                android:textColor="@color/whiteColor"
                android:id="@+id/i_up1"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"

                />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: "
            android:textColor="@color/whiteColor"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-3dp"
            android:id="@+id/i_up1_cost" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:weightSum="1"
            android:layout_below="@+id/i_up1_cost"
            android:layout_alignStart="@+id/linearLayout">
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Lv. UP"
                android:id="@+id/i_buLvUp2"
                android:layout_below="@+id/linearLayout"
                android:layout_toStartOf="@+id/i_maxUnit"
                android:layout_marginTop="2dp"
                android:onClick="onLevelUp2"
                android:alpha="0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UP2"
                android:textStyle="bold"
                android:textColor="@color/whiteColor"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:id="@+id/i_up2"
                />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: "
            android:textColor="@color/whiteColor"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-3dp"
            android:id="@+id/i_up1_cost2"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:weightSum="1"
            android:layout_below="@+id/i_up1_cost2"
            android:layout_alignStart="@+id/i_up1_cost2">

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Lv. UP"
                android:id="@+id/button"
                android:layout_below="@+id/linearLayout"
                android:layout_toStartOf="@+id/i_maxUnit"
                android:layout_marginTop="3dp"
                android:onClick="onLevelUp3"
                android:alpha="0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UP3"
                android:textColor="@color/whiteColor"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:id="@+id/textView"
                  />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: "
            android:textColor="@color/whiteColor"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-3dp"
            android:id="@+id/i_up1_cost3"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignStart="@+id/linearLayout3" />
    </LinearLayout>


</RelativeLayout>
