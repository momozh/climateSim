<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.climateSim.A_Government"
    android:background="@drawable/th0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TownHall"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/blackColor"
        android:id="@+id/G_Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pollution: "
        android:id="@+id/i_g_pollution"
        android:textSize="26sp"
        android:textColor="@color/blackColor"
        android:layout_above="@+id/i_TravelInome"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Satisfaction: "
        android:id="@+id/i_satisfaction"
        android:textSize="26sp"
        android:textColor="@color/blackColor"
        android:layout_alignBaseline="@+id/i_TravelInome"
        android:layout_alignBottom="@+id/i_TravelInome"
        android:layout_toEndOf="@+id/i_g_pollution" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel Income: "
        android:id="@+id/i_TravelInome"
        android:textSize="26sp"
        android:textColor="@color/blackColor"
        android:layout_marginBottom="66dp"
        android:layout_above="@+id/i_g_goback"
        android:layout_toStartOf="@+id/i_g_pollution" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backMenu"
        android:id="@+id/i_g_goback"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="onBack" />


</RelativeLayout>
