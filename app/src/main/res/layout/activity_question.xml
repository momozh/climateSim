<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relatively"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0df7e"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.90"
        android:orientation="vertical"
        android:weightSum="1" >

        //score and time
        <LinearLayout
            android:layout_width="740dp"
            android:layout_height="56dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Score: 0"
                android:textColor="#ffffff"
                android:textSize="25.0sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/endquiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="End quiz"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#ffffff"
                android:textSize="25.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="5dp"
            android:background="@android:color/black"/>

        //button 1
        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="Another name for greenhouse gases like carbon dioxide and methane"
            android:textColor="#032502"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:layout_weight="0.40"
            android:textAlignment="center" />

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="5dp"
            android:background="@android:color/holo_green_light"/>

        //question
        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="698dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:layout_margin="20dp"
            android:textColor="@android:color/holo_green_dark"
            android:gravity="start"
            android:text="About how much of Earthâ€™s surface is covered by clouds at any given time?"
            android:textSize="25sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textAlignment="viewStart"
            android:layout_weight="0.20"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="5dp"
            android:background="@android:color/holo_green_light"/>

        //button 2
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="Another name for greenhouse gases like carbon dioxide and methane"
            android:textColor="#032502"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:layout_weight="0.40" />

    </LinearLayout>
</LinearLayout>